<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List Order"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:gravity="center"
                android:padding="15dp"
                android:textStyle="bold"
                android:layout_margin="8dp"/>


            <TextView
                android:id="@+id/textViewUserNameToListOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textStyle="bold"

                android:textColor="@color/black"
                android:textSize="16sp"

                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/textViewUserEmailToListOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>


            <TextView
                android:id="@+id/textViewTotalListOrderStatusPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tota To List Order Status Pending: "
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/textViewTotalListOrderStatusProcessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tota To List Order Status Processing: "
                android:textColor="@color/yellow"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/textViewTotalListOrderStatusDelivering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tota To List Order Status Delivering: "
                android:textColor="@color/purple_200"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/textViewTotalListOrderStatusDelivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tota To List Order Status Delivered: "
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/textViewTotalListOrderStatusCanceled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tota To List Order Status Cancelled: "
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/textViewTotalListOrderStatusAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tota To List Order Status All: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewListOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintWidth_percent="0.9" />



<!--            <Button-->
<!--                android:id="@+id/buttonAddItem"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Add Item"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_marginEnd="8dp"/>-->

<!--            <Button-->
<!--                android:id="@+id/buttonRemoveItem"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Remove Item"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginEnd="8dp"/>-->

            <Button
                android:id="@+id/buttonBackToListOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:shadowRadius="10"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>



